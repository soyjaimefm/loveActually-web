---
import Layout from "../layouts/Layout.astro";
import CircleText from "../components/CircleText.astro";
import { text } from "../config/text";
---

<Layout title="Love Actually | Webs de bodas" description="💍 Diseñamos vuestra web de boda a medida 🌷 También hacemos invitaciones digitales">
  <main class="">
    <!-- Hero section -->
    <section
      id="Hero section"
      class="max-w-6xl bg-laBeige container mx-auto py-12 px-8"
    >
      <div
        class="grid grid-cols-1 items-center gap-y-6 md:grid-cols-2 md:gap-16"
      >
        <div>
          <img
            alt="Pareja leyendo y riendo"
            src="/hero-image.jpg"
            class="object-cover aspect-[4/3]"
            width="100%"
          />
        </div>
        <div>
          <h1
            class="text-laRed text-3xl md:text-4xl lg:text-5xl leading-normal tracking-widest text-center font-alNevrada"
          >
            {text.heroSection.title}
          </h1>
        </div>
      </div>
    </section>
    <section class="max-w-6xl container mx-auto">
      <div class="bg-laSoftGreen h-8"></div>
      <div
        class="h-8 font-roxboroughCf bg-laSoftBlue bg-repeat-x bg-left bg-[url('/repeating-text.svg')]"
      >
      </div>
    </section>
    <!-- Section 1 -->
    <section class="max-w-6xl bg-gray-50 container mx-auto py-12 px-8">
      <div
        class="grid grid-cols-1 items-start md:grid-cols-3 md:gap-16 gap-y-12"
      >
        <div>
          <CircleText
            text={text.section1.feature1.title}
            circleColor="#B9B57C"
          />
          <p class="text-center">{text.section1.feature1.text}</p>
        </div>
        <div>
          <CircleText
            text={text.section1.feature2.title}
            circleColor="#EF9560"
          />
          <p class="text-center">{text.section1.feature2.text}</p>
        </div>
        <div>
          <CircleText
            text={text.section1.feature3.title}
            circleColor="#F3D5BE"
          />
          <p class="text-center">{text.section1.feature3.text}</p>
        </div>
      </div>
    </section>
    <!-- Section 2 -->
    <section class="max-w-6xl bg-laBeige container mx-auto">
      <div
        class="grid grid-cols-1 items-center gap-y-6 md:grid-cols-3 md:gap-16"
      >
        <div class="col-span-2 p-12">
          <h2
            class="text-laOrange text-2xl md:text-4xl leading-normal tracking-widest text-center font-alNevrada mb-4"
          >
            {text.section2.title}
          </h2>
          <p class="text-center">
            <Fragment set:html={text.section2.text} />
          </p>
        </div>
        <div>
          <img src="/papeleria.jpg" alt="" />
        </div>
      </div>
    </section>
  </main>
</Layout>
