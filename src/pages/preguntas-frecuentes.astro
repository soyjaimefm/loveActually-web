---
import Layout from "../layouts/Layout.astro";
import { qaText } from "../config/text";
---

<Layout title="Love Actually">
  <main class="bg-laBackground">
    <section class="container max-w-6xl px-8 py-12 mx-auto bg-gray-50">
      <h1
        class="mb-6 text-3xl leading-normal tracking-widest text-center text-laOrange md:text-4xl lg:text-5xl font-alNevrada"
      >
        Preguntas frecuentes
      </h1>
      <div class="max-w-2xl mx-auto">
        {
          qaText.map((qa) => (
            <details class="p-4 mt-2 bg-laBeige open:bg-gray-50">
              <summary class="cursor-pointer">{qa.question}</summary>
              <p class="mt-4">{qa.answer}</p>
            </details>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
<style>
  details[open] summary ~ * {
    animation: sweep 0.3s ease-in-out;
  }

  @keyframes sweep {
    0% {
      opacity: 0;
      margin-left: -10px;
    }
    100% {
      opacity: 1;
      margin-left: 0px;
    }
  }
</style>
