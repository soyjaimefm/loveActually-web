---
import { Image } from "astro:assets";
import menu from "../../config/weddingData/menu";
---

<header
  class="z-20 p-2 flex justify-center items-center w-full bg-softGreen text-primaryGreen font-theSeasons"
>
  <nav class="w-full">
    <div class="container mx-auto flex items-center justify-center sm:gap-40">
      <ul class="w-32 flex flex-col items-start">
        {
          menu.main1.map((menuItem) => (
            <li>
              <a href={menuItem.url}>{menuItem.name}</a>
            </li>
          ))
        }
      </ul>
      <a class="w-28" href="/">
        <Image
          src="/example1/logo-myc.png"
          alt="logo-home"
          width={110}
          height={110}
        />
      </a>

      <ul class="w-32 flex flex-col items-end">
        {
          menu.main2.map((menuItem) => (
            <li>
              <a href={menuItem.url}>{menuItem.name}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>
